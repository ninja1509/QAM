<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".m_selection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgimg"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Stream to check results"
            android:textColor="@android:color/white"
            android:fontFamily="cursive"
            android:textSize="32dp"
            android:gravity="center"
            android:layout_marginTop="150dp"

            />

        <Button
            android:id="@+id/b_FYMCA"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="FY MCA"
            android:textColor="@android:color/white"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/b_SYMCA"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:layout_below="@+id/b_FYMCA"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="SY MCA"
            android:textColor="@android:color/white"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/b_FYMBA"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:layout_below="@+id/b_SYMCA"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="SY MBA"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/b_SYMBA"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:layout_below="@+id/b_FYMBA"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="100dp"
            android:text="SY MBA"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />

    </RelativeLayout>

</ScrollView>